<article class='post'>
  <div class='title'>
    <span class='posted'><a href='/post/{{id}}'>{{title}}</a></span><span
      style='float:right'
    >Posted by {{user.username}} on {{format_date created_at}}</span><br />
    <span class='comment-count' style='float:right'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</span>
  </div>
  <div class='content'>
    <p>{{post_text}}</p>
  </div>
</article>